[Unit]
Description=Kraken distributed state engine
After=network.target network-online.target
Requires=network.target

[Service]
Type=notify
WorkingDirectory={{ ansible_env.HOME }}
ExecStart=/usr/sbin/{{ "kraken-layercake-vbox" if kr_with_vbox else "kraken-layercake" }} -config /etc/kraken/config.yaml -sdnotify -noprefix

[Install]
WantedBy=multi-user.target